generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  fullName    String
  username    String   @unique
  phone       String   @unique
  roleId      String   @db.Uuid
  address     String
  dateOfBirth DateTime? // mieux que String pour une date
  imageUrl    String   @default("")
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  role        Role     @relation(fields: [roleId], references: [id], onDelete: Restrict)
}

model Role {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
}

enum StatusOrder {
  pending
  progress
  packing
  delivered
  cancel
}
